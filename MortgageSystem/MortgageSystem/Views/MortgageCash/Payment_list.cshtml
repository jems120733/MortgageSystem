
@{
    ViewBag.Title = "Payment_list";
}

<h2>Payment_list</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            For date
        </th>
        <th>
            Payment Type
        </th>
        <th>
            Collector
        </th>
        

        <th>
            Comment
        </th>

        <th>
           Amount
        </th>
        

        <th></th>
    </tr>

    @foreach (var item in ViewBag.list)
    {
        <tr>
            <td>
                @item.sales_date.ToString("MMM dd, yyyy")
            </td>
            <td>
                @item.mf_payment_type.Description
            </td>

            <td>
                @if (item.crm_collector_id != null)
                {
                    @(item.crm_employee.last_name +", "+ item.crm_employee.first_name   +" "+   item.crm_employee.middle_name)
                }
            </td>

            <td>
                @item.comment
            </td>

            <td>
                @item.amount
            </td>
           

            @*<td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>*@
        </tr>
    }

</table>



